<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rlImgSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp">

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/recipeImg"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:alpha="1.0"
                android:scaleType="centerCrop"
                android:src="@drawable/buffer" />

            <TextView
                android:id="@+id/recipeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/avgRating"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:text="Recipe Name"
                android:textSize="20sp"
                android:textColor="@android:color/black" />


            <me.zhanghai.android.materialratingbar.MaterialRatingBar
                android:id="@+id/avgRating"
                style="@style/Widget.MaterialRatingBar.RatingBar.Indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/author"
                android:layout_alignLeft="@+id/recipeName"
                app:mrb_progressTint="@android:color/white"
                app:mrb_secondaryProgressTint="@android:color/white" />

            <TextView
                android:id="@+id/numRatings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/avgRating"
                android:layout_alignBottom="@+id/avgRating"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/avgRating"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:text="(0)"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/recipeName"
                android:layout_alignBottom="@+id/recipeImg"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:textColor="@android:color/black"
                android:text="Author"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/text_divider"
                android:layout_alignTop="@+id/author"
                android:layout_toRightOf="@+id/author"
                android:text="  â€¢  "
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/author"
                android:layout_alignTop="@+id/author"
                android:layout_toRightOf="@+id/text_divider"
                android:text="Date"
                android:textColor="@android:color/black"
                android:textSize="15sp"/>
        </RelativeLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_show_rating_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/rlImgSection"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="-28dp"
            android:src="@drawable/ic_baseline_star_24" />

        <LinearLayout
            android:id="@+id/llEmptyRecipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rlImgSection"
            android:layout_marginHorizontal="20dp"
            android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/ingredients"
            android:textSize="20sp"/>

            <TextView
                android:id="@+id/ingredients"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/lorem_ipsum"
                android:textSize="17sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/directions"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/directions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/lorem_ipsum"
                android:textSize="17sp"/>

        </LinearLayout>
    </RelativeLayout>
</ScrollView>
